{
  "name": "retail_assist",
  "version": "1.0.0",
  "description": "A backend app to handle the retail billing and inventory management",
  "main": "index.js",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "pretest": "dotenv -e .env.test -- npx prisma generate && dotenv -e .env.test -- npx prisma db push",
    "test": "NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc -p . && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset"
  },
  "author": "Mathews Mathews",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "prisma": "^6.14.0",
    "uuid": "^11.1.0",
    "tsx": "^4.20.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
